#include <stdio.h>
struct employee{
    char name[30];
    int age;
    float bs;
    float da;
    float hra;
    float tsalary;
};
void main()
{
    struct employee e;
    printf("enter the name");
    scanf("%s",e.name);
    printf("enter the age");
    scanf("%d",&e.age);
    printf("enter the basic salary");
    scanf("%f",&e.bs);
    printf("enter the da");
    scanf("%f",&e.da);
    printf("enter the hra");
    scanf("%f",&e.hra);
    e.tsalary=(1+e.da+e.hra)*e.bs;
    printf("%s\n",e.name);
    printf("%d\n",e.age);
    printf("%f\n",e.bs);
    printf("%f\n",e.da);
    printf("%f\n",e.hra);
    printf("%f\n",e.tsalary);
}
